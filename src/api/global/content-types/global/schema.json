{
  "kind": "singleType",
  "collectionName": "globals",
  "info": {
    "singularName": "global",
    "pluralName": "globals",
    "displayName": "Global",
    "description": "Configure global site settings"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "siteName": {
      "type": "string",
      "required": true
    },
    "siteDescription": {
      "type": "text",
      "required": true
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "navigation": {
      "type": "component",
      "repeatable": false,
      "component": "layout.navigation",
      "required": true
    },
    "footer": {
      "type": "component",
      "repeatable": false,
      "component": "layout.footer",
      "required": true
    },
    "socialLinks": {
      "type": "component",
      "repeatable": true,
      "component": "shared.social-link",
      "required": true
    },
    "favicon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    }
  }
} 